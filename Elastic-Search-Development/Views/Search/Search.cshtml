@model IEnumerable<Elastic_Search_Development.Models.Customer>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="input-group searchContainer">
        <input type="text" class="form-control" id="txtCustomer" name="txtCustomer" placeholder="Enter A Customer" required>
        <div class="input-group-append">
            <button id="btnsearch" class="btn btn-primary" type="button" data-toggle="modal" data-target="#customerModal">
                <i class="fa fa-search"></i>
            </button>
        </div>
    </div>

    <!--Displays elastic search customer results in a table-->
    <table id="theTable" class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">DOB</th>
                <th scope="col">SSN</th>
                <th scope="col">Email</th>
                <th scope="col">Score</th>
                <!-- <th scope="col">Address</th>
                 <th scope="col">City</th>
                 <th scope="col">State</th>
                 <th scope="col">Zipcode</th>
                 <th scope="col">Country</th>
                 <th scope="col">Phone</th>-->
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerId</td>
                        <td>@customer.FirstName</td>
                        <td>@customer.LastName</td>
                        <td>@customer.DateOfBirth</td>
                        <td>@customer.ssn</td>
                        <td>@customer.Email</td>
                        <td class="primary-color">@customer.Score</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>No Results Found</td>
                </tr>
            }
        </tbody>
    </table>





    <!--Displays elastic search customer results in a Modal-->
    <div class="container">
        <!---<button class="btn btn-primary" data-toggle="modal" data-target="#customerModal">Show Modal</button>-->

        <div class="modal fade" id="customerModal" data-backdrop="static">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3 class="modal-title">List of Customers</h3>
                    </div>
                    <div class="modal-body">
                        <h5 class="text-center">Search Results for <span id="customerInfoValue"></span></h5>
                        <table id="customerGridModal" class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">First Name</th>
                                    <th scope="col">Last Name</th>
                                    <th scope="col">DOB</th>
                                    <th scope="col">SSN</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Score</th>
                                    <!-- <th scope="col">Address</th>
                                         <th scope="col">City</th>
                                         <th scope="col">State</th>
                                         <th scope="col">Zipcode</th>
                                         <th scope="col">Country</th>
                                         <th scope="col">Phone</th>-->
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var customer in Model)
                                    {
                                        <tr>
                                            <td>@customer.CustomerId</td>
                                            <td>@customer.FirstName</td>
                                            <td>@customer.LastName</td>
                                            <td>@customer.DateOfBirth</td>
                                            <td>@customer.ssn</td>
                                            <td>@customer.Email</td>
                                            <td class="primary-color">@customer.Score</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>No Results Found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="redirectToPrevPage()">Cancel</button>
                        <!--<button class="btn btn-primary" id="addcheckedfriends1" onclick="add_checked_friends()">Dedupe</button>-->
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </div>
</body>
</html>
